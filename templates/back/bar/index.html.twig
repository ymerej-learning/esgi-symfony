{% extends 'base_back.html.twig' %}

{% block title %}Liste des bars{% endblock %}

{% block body %}
    <table>
        <tr>
            <td>Nom</td>
            <td>Adresse</td>
            <td>Ville</td>
            <td>CP</td>
            <td></td>
        </tr>
        {% for bar in bars %}
            <tr>
                <td>{{ bar.name }}</td>
                <td>{{ bar.address }}</td>
                <td>{{ bar.city }}</td>
                <td>{{ bar.cp }}</td>
                <td>
                    <a href="{{ path('back_bar_show', {'id': bar.id}) }}">Voir</a>
                    <a href="{{ path('back_bar_edit', {'id': bar.id}) }}">Editer</a>
                    <a href="{{ path('back_bar_delete', {'id': bar.id, 'token': csrf_token('delete_bar')}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
